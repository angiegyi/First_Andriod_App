<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="@android:color/holo_green_light"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="158dp">

        <TextView
            android:id="@+id/NameLabelView"
            android:layout_width="74dp"
            android:layout_height="19dp"
            android:text="Name: "
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="299dp"
            android:layout_height="19dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.7"
            card_view:layout_constraintStart_toEndOf="@+id/NameLabelView"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/QuantityLabelView"
            android:layout_width="74dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:text="Quantity:"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/NameLabelView" />

        <TextView
            android:id="@+id/quantityView"
            android:layout_width="294dp"
            android:layout_height="19dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.153"
            card_view:layout_constraintStart_toEndOf="@+id/QuantityLabelView"
            card_view:layout_constraintTop_toBottomOf="@+id/nameView" />

        <TextView
            android:id="@+id/CostLabelView"
            android:layout_width="76dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:text="Cost:"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/QuantityLabelView" />

        <TextView
            android:id="@+id/costView"
            android:layout_width="294dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/CostLabelView"
            card_view:layout_constraintStart_toEndOf="@+id/CostLabelView" />

        <TextView
            android:id="@+id/DescriptionLabelView"
            android:layout_width="74dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:text="Description"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/CostLabelView" />

        <TextView
            android:id="@+id/descriptionView"
            android:layout_width="297dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/DescriptionLabelView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.2"
            card_view:layout_constraintStart_toEndOf="@+id/DescriptionLabelView" />

        <TextView
            android:id="@+id/FrozenLabelView"
            android:layout_width="73dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:text="Frozen:"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/DescriptionLabelView" />

        <TextView
            android:id="@+id/frozenView"
            android:layout_width="297dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/FrozenLabelView"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.272"
            card_view:layout_constraintStart_toEndOf="@+id/FrozenLabelView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>